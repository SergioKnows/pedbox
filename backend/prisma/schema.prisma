generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model RedditData {
  id           Int      @id @default(autoincrement())
  displayName  String   @unique      @map("display_name") // p/ evitar duplicados
  title        String?
  subscribers  Int?
  over18       Boolean? @map("over_18")
  createdAt    DateTime?
  iconImg      String?  @map("icon_img")
  url          String?
  publicDescription String?
  lang         String?
  bannerImg    String?

  @@index([subscribers])
}

model User {
  id           Int      @id @default(autoincrement())
  email        String   @unique
  passwordHash String
  role         String   @default("user")
  createdAt    DateTime @default(now())
}